@model Domain.DTO_s.Reservation
@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;

@inject IViewLocalizer localizer

@{
    ViewData["Title"] = "Reservations | Edit";
    ViewData["ActivePage"] = "Reservations";
    var check = CultureInfo.CurrentCulture.Name;
}

<div class="wrapper">
    <partial name="_Slide" />
    <div class="main">
        <partial name="_Navbar" />
        <main class="content">
            <div class="row justify-content-md-center">
                <div class="col-md-6">
                    <form class="card mt-5" asp-action="Edit" enctype="multipart/form-data">
                        @if (check == "en-US")
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="card-header">
                                <h3 class="card-title">Edit Reservation</h3>
                            </div>
                            <div class="card-body">
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="FullName"></label>
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="FullName">
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="Nationality"></label>
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="Nationality">
                                        <span asp-validation-for="Nationality" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="NationalityId"></label>
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="NationalityId">
                                        <span asp-validation-for="NationalityId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="PhoneNumber"></label>
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="PhoneNumber">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="Email"></label>
                                    <div class="col">
                                        <input type="email" class="form-control" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="IsAdult"></label>
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="IsAdult">
                                        <span asp-validation-for="IsAdult" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="CheckIn"></label>
                                    <div class="col">
                                        <input type="datetime-local" class="form-control" asp-for="CheckIn">
                                        <span asp-validation-for="CheckIn" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="CheckOut"></label>
                                    <div class="col">
                                        <input type="datetime-local" class="form-control" asp-for="CheckOut">
                                        <span asp-validation-for="CheckOut" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="Breakfast"></label>
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="Breakfast">
                                        <span asp-validation-for="Breakfast" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="Lunch"></label>
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="Lunch">
                                        <span asp-validation-for="Lunch" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="Dinner"></label>
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="Dinner">
                                        <span asp-validation-for="Dinner" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="ExtraBed"></label>
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="ExtraBed">
                                        <span asp-validation-for="ExtraBed" class="text-danger"></span>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-check-input" asp-for="RoomId" hidden>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label">Room Number</label>
                                    <div class="col">
                                        <input type="text" class="form-control" value="@ViewBag.RoomNumber" readonly>
                                    </div>
                                </div>
                                <div>
                                    @for (var i = 0; i < Model.Escorts.Count; i++)
                                    {
                                        var escort = Model.Escorts[i];
                                        <div class="mb-3 row mt-4">
                                            <label class="col-3 col-form-label required">Escort Full Name</label>
                                            <div class="col">
                                                <input type="text" class="form-control" name="Escorts[@i].FullName" placeholder="Full Name" value="@escort.FullName">
                                            </div>
                                            <div class="col">
                                                <input type="checkbox" class="form-check-input" name="Escorts[@i].IsAdult" asp-for="@escort.IsAdult">
                                                <small class="form-hint mt-1">Is Adult</small>
                                            </div>
                                            <input type="hidden" asp-for="@escort.EscortId" />
                                        </div>
                                    }
                                </div>

                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a asp-action="Index" class="btn btn-secondary" role="button">@localizer["BackToList"]</a>
                                    </div>
                                    <div>
                                        <button type="submit" class="btn btn-primary">@localizer["SaveChanges"]</button>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="card-header">
                                <h3 class="card-title text-lg-end">تعديل الحجز</h3>
                            </div>
                            <div class="card-body">
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="FullName">
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["FullName"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="Nationality">
                                        <span asp-validation-for="Nationality" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["Nationality"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="NationalityId">
                                        <span asp-validation-for="NationalityId" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["NationalityId"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="PhoneNumber">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["PhoneNumber"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="email" class="form-control" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["Email"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="IsAdult">
                                        <span asp-validation-for="IsAdult" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["IsAdult"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="datetime-local" class="form-control" asp-for="CheckIn">
                                        <span asp-validation-for="CheckIn" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["CheckIn"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="datetime-local" class="form-control" asp-for="CheckOut">
                                        <span asp-validation-for="CheckOut" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["CheckOut"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="Breakfast">
                                        <span asp-validation-for="Breakfast" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["Breakfast"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="Lunch">
                                        <span asp-validation-for="Lunch" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["Lunch"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="Dinner">
                                        <span asp-validation-for="Dinner" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["Dinner"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="checkbox" class="form-check-input" asp-for="ExtraBed">
                                        <span asp-validation-for="ExtraBed" class="text-danger"></span>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-check-input" asp-for="RoomId" hidden>
                                    </div>
                                    <label class="col-3 col-form-label required">@localizer["ExtraBed"]</label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="text" class="form-control" value="@ViewBag.RoomNumber" readonly>
                                    </div>
                                    <label class="col-3 col-form-label">@localizer["RoomNumber"]</label>
                                </div>
                                <div>
                                    @for (var i = 0; i < Model.Escorts.Count; i++)
                                    {
                                        var escort = Model.Escorts[i];
                                        <div class="mb-3 row mt-4">
                                            <div class="col">
                                                <input type="checkbox" class="form-check-input" name="Escorts[@i].IsAdult" asp-for="@escort.IsAdult">
                                                <small class="form-hint mt-1 h5">بالغ</small>
                                            </div>
                                            <div class="col">
                                                <input type="text" class="form-control" name="Escorts[@i].FullName" placeholder="الاسم الكامل للمرافق" value="@escort.FullName">
                                            </div>
                                            <input type="hidden" asp-for="@escort.EscortId" />
                                            <label class="col-3 col-form-label required">الاسم الكامل للمرافق</label>
                                        </div>
                                    }
                                </div>

                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <button type="submit" class="btn btn-primary">@localizer["SaveChanges"]</button>
                                    </div>
                                    <div>
                                        <a asp-action="Index" class="btn btn-secondary" role="button">@localizer["BackToList"]</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </main>
        <partial name="_Footer" />
    </div>
</div>
