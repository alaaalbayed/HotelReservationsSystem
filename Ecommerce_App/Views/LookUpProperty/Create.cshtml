@model Domain.DTO_s.LookUpProperty

@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;

@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Types Options | Create";
    ViewData["ActivePage"] = "TypesOptions";
    var check = CultureInfo.CurrentCulture.Name;
}
<div class="wrapper">
    <partial name="_Slide" />
    <div class="main">
        <partial name="_Navbar" />
        <main class="content">
            <div class="row justify-content-md-center">
                <div class="col-md-6">
                    <form class="card mt-5" asp-action="Create">
                        @if (check == "en-US")
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="card-header">
                                <h3 class="card-title">Create New Room Type</h3>
                            </div>
                            <div class="card-body">
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="NameEn"></label>
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="NameEn" placeholder="RoomType En">

                                        <span asp-validation-for="NameEn" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="NameAr"></label>
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="NameAr" placeholder="RoomType Ar">

                                        <span asp-validation-for="NameAr" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="Details"></label>
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="Details" placeholder="RoomType Details">

                                        <span asp-validation-for="Details" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label required" asp-for="TypeId"></label>
                                    <div class="col">
                                        <select class="form-select" asp-for="TypeId" asp-items="ViewBag.TypeOptions">
                                            <option value="" disabled selected>Select a Type</option>
                                        </select>
                                        <span asp-validation-for="TypeId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a asp-action="Index" class="btn btn-secondary" role="button">@localizer["BackToList"]</a>
                                    </div>
                                    <div>
                                        <button type="submit" class="btn btn-primary">@localizer["Create"]</button>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="card-header">
                                <h3 class="card-title text-lg-end">انشاء نوع غرفة</h3>
                            </div>
                            <div class="card-body">
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="NameEn" placeholder="RoomType En">

                                        <span asp-validation-for="NameEn" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required" asp-for="NameEn"></label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="NameAr" placeholder="RoomType Ar">

                                        <span asp-validation-for="NameAr" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required" asp-for="NameAr"></label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <input type="text" class="form-control" asp-for="Details" placeholder="RoomType Details">

                                        <span asp-validation-for="Details" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required" asp-for="Details"></label>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col">
                                        <select class="form-select" asp-for="TypeId" asp-items="ViewBag.TypeOptions">
                                            <option value="" disabled selected>Select a Type</option>
                                        </select>
                                        <span asp-validation-for="TypeId" class="text-danger"></span>
                                    </div>
                                    <label class="col-3 col-form-label required" asp-for="TypeId"></label>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <button type="submit" class="btn btn-primary">@localizer["Create"]</button>
                                    </div>
                                    <div>
                                        <a asp-action="Index" class="btn btn-secondary" role="button">@localizer["BackToList"]</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </main>
        <partial name="_Footer" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
