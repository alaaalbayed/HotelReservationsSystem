@model Domain.DTO_s.LookUpProperty

@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;

@inject IViewLocalizer localizer

@{
    ViewData["Title"] = "Types Options | Info";
    ViewData["ActivePage"] = "TypesOptions";
    var check = CultureInfo.CurrentCulture.Name;
}

<div class="wrapper">
    <partial name="_Slide" />
    <div class="main">
        <partial name="_Navbar" />
        <main class="content">
            @if (check == "en-US")
            {
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">LookUpProperty Info</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-8">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.NameEn)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.NameEn)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.NameAr)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.NameAr)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Details)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Details)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-5 ms-2">
                    <a class="btn btn-primary" asp-action="Index">Back to List</a>
                </div>
            }
            else
            {
                <div class="table-container-ar">
                    <div class="table-row">
                        <div class="table-cell">
                            @Model.NameEn
                        </div>
                        <div class="table-cell">
                            <label class="control-label">@localizer["Type"]</label>
                        </div>
                    </div>
                </div>
            }
        </main>
        <partial name="_Footer" />
    </div>
</div>
