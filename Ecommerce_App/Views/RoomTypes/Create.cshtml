@model Domain.DTO_s.RoomType

@{
    ViewData["Title"] = "Create";
}
<div class="wrapper">
    <partial name="_Slide" />
    <div class="main">
        <partial name="_Navbar" />
        <main class="content">
            <div class="row justify-content-md-center">
                <div class="col-md-6">
                    <form class="card mt-5" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-header">
                            <h3 class="card-title">Create New Room Type</h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 row">
                                <label class="col-3 col-form-label required" asp-for="Breakfast"></label>
                                <div class="col">
                                    <input type="number" class="form-control" asp-for="Breakfast" placeholder="Property En">
                                    <small class="form-hint">Here The Property Name That Will Display For The User In English.</small>
                                    <span asp-validation-for="Breakfast" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-3 col-form-label required" asp-for="Dinner"></label>
                                <div class="col">
                                    <input type="number" class="form-control" asp-for="Dinner" placeholder="Property En">
                                    <small class="form-hint">Here The Property Name That Will Display For The User In English.</small>
                                    <span asp-validation-for="Dinner" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-3 col-form-label required" asp-for="Lunch"></label>
                                <div class="col">
                                    <input type="number" class="form-control" asp-for="Lunch" placeholder="Property En">
                                    <small class="form-hint">Here The Property Name That Will Display For The User In English.</small>
                                    <span asp-validation-for="Lunch" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-3 col-form-label required" asp-for="ExtraBed"></label>
                                <div class="col">
                                    <input type="number" class="form-control" asp-for="ExtraBed" placeholder="Property En">
                                    <small class="form-hint">Here The Property Name That Will Display For The User In English.</small>
                                    <span asp-validation-for="ExtraBed" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-3 col-form-label required" asp-for="TypeId"></label>
                                <div class="col">
                                    <select class="form-select" asp-for="TypeId" asp-items="ViewBag.TypeOptions">
                                        <option value="">Select a Type</option>
                                    </select>
                                    <small class="form-hint">Select the corresponding property type.</small>
                                    <span asp-validation-for="TypeId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Index" class="btn btn-secondary" role="button">Back to List</a>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <partial name="_Footer" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
