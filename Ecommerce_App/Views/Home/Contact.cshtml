@model Domain.DTO_s.Contact
@{
    Layout = "_HotelLayout";
    ViewData["Title"] = "Contact";
    ViewData["ActivePage"] = "Contact";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Sona Template">
    <meta name="keywords" content="Sona, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>PRETAL HOTEAL</title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,500,600,700&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/assets/hotel/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/assets/hotel/css/style.css" type="text/css">
</head>

<body>

    <partial name="_HotelNav" />


    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="contact-text">
                        <h2>Contact Info</h2>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="c-o">Address:</td>
                                    <td>Mutah St, Al Mafraq, Jordan</td>
                                </tr>
                                <tr>
                                    <td class="c-o">Phone:</td>
                                    <td>+962790497780</td>
                                </tr>
                                <tr>
                                    <td class="c-o">Email:</td>
                                    <td>info@pretalhotel.com</td>
                                </tr>
                                <tr>
                                    <td class="c-o">Fax:</td>
                                    <td>+96226230400</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-7 offset-lg-1">
                    <form action="Contact" method="post"a class="contact-form" id="contact-form">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" asp-for="Name" placeholder="Your Name">
                            </div>
                            <div class="col-lg-6">
                                <input type="text" asp-for="Email" placeholder="Your Email">
                            </div>
                            <div class="col-lg-12">
                                <textarea asp-for="Message" placeholder="Your Message"></textarea>
                                <button type="submit" id="submit-button">Submit Now</button>
                            </div>
                        </div>
                    </form>
                    <div id="form-feedback" style="display: none;"></div>
                </div>
            </div>
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3370.666416906088!2d36.2126146!3d32.34766380000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151b996cc99bce99%3A0x89df57528da25de2!2z2YHZhtiv2YIg2KjYsdmK2KrYp9mEIFByZXRhbCBIb3RlbA!5e0!3m2!1sen!2sjo!4v1695397373265!5m2!1sen!2sjo" height="470" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->
    <!-- Footer Section Begin -->
    <partial name="_HotelFooter"/>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/assets/hotel/js/jquery-3.3.1.min.js"></script>
    <script src="~/assets/hotel/js/bootstrap.min.js"></script>
    <script src="~/assets/hotel/js/jquery.magnific-popup.min.js"></script>
    <script src="~/assets/hotel/js/jquery.nice-select.min.js"></script>
    <script src="~/assets/hotel/js/jquery-ui.min.js"></script>
    <script src="~/assets/hotel/js/jquery.slicknav.js"></script>
    <script src="~/assets/hotel/js/owl.carousel.min.js"></script>
    <script src="~/assets/hotel/js/main.js"></script>

    <script>
        $(document).ready(function () {
            $("#contact-form").on("submit", function (e) {
                e.preventDefault();

                $("#submit-button").attr("disabled", true);

                var formData = $(this).serialize();
                $.ajax({
                    type: "POST",
                    url: $(this).attr("action"),
                    data: formData,
                    success: function (response) {
                        $("#form-feedback").html("Message sent successfully!");
                        $("#form-feedback").removeClass("text-danger").addClass("text-success");
                        $("#form-feedback").show();
                        setTimeout(function () {
                            $("#form-feedback").fadeOut();
                        }, 3000);
                    },
                    error: function (response) {
                        $("#form-feedback").html("An error occurred. Please try again.");
                        $("#form-feedback").removeClass("text-success").addClass("text-danger");
                        $("#form-feedback").show();
                    },
                });

                $("#submit-button").attr("disabled", false);
            });
        });
    </script>

</body>

</html>